<% layout("layouts/biolerplate") -%>

<style>
    .filters{
        margin-top: 2rem;
        display: flex;
        flex-wrap: wrap;
    }
    .filter{
        margin-left: 2rem;
        text-align: center;
        opacity: 0.7;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }

    .switch-form{
        border: 1px solid ;
        border-radius: 10px;
        margin-left: 3rem;
        padding: 12px 0;
        padding-left: 10px !important;
        padding-right: 50px !important;
        height: 50px;
    }
    .gst{
        display: none;
    }
</style>

<body>
    <div class="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Tranding</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Cities</p>
        </div>

        
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-chess-rook"></i></div>
            <p>Castles</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pools</p>
        </div>
        
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-earth-europe"></i></div>
            <p>Top of the world</p>
        </div>

        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boat</p>
        </div>

        <div class="form-check-reverse form-switch switch-form">
             <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
        </div>

    </div>
    <!-- <a href="/listings/NewListform" class="anchor">Add new listing</a> --> 
    <div class="card-list mt-3">
        <% for(let ele of data) {%>
             <div class="card "style="width: 18rem;" > 
                   <a href="/listings/<%= ele._id %>">
                    <img src="<%= ele.image.url %>" class="card-img-top" alt="...">
                   </a>
                    <div class="card-body">
                          <p class="card-text"><a href="/listings/<%= ele._id %>" class="text-decoration-none text-black">Title: <%= ele.title %></a>
                          <br><%= ele.price.toLocaleString("en-IN", { style: "currency", currency: "INR" })%><i class="gst">&nbsp; 18%GST</i></p>
                          
                    </div>
            </div>
        <% } %> 
    </div>   
</body>


